<div id="subscribe-banner" class="rf-container rf-mt-4w">
  <div class="rf-grid-row">
    <div class="rf-col">
      <div class="rf-callout">
        <p class="rf-callout__text">
          Pour postuler ou poser une question, contactez-nous Ã 
          <span class="rf-text--lg rf-mx-1v">
            <b> <%= contactEmail %> </b>
          </span>
        </p>
        <button id="apply-button" title="Postuler" class="rf-btn">
          Postuler
        </button>
        <div id="screening" class="d-none"><%- include('screening') -%></div>
      </div>
    </div>
  </div>
