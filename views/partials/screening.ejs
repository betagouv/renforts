        </div>
        <div class="screening-final d-none" id="screening-final-not-ok">
          C'est pas bon. Postulez plutot Ã  jeveuxaider.fr
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $("#oui").click(function () {
      $("#screening-final-ok").removeClass("d-none")
      $("#screening-final-not-ok").addClass("d-none")
    })

    $("#non").click(function () {
      $("#screening-final-not-ok").removeClass("d-none")
      $("#screening-final-ok").addClass("d-none")
    })
  })
</script>
